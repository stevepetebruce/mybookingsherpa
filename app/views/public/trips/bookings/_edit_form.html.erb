<%= form_with(model: booking, local: true, url: url, class: "needs-validation", html: { novalidate: :novalidate }) do |form| %>
  <ul class="formline">
    <li>
      <h4 class="font-weight-bold">Personal Details</h4>
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :name, "Full Name" %>
          <%= form.text_field :name, class: "#{'is-invalid' if @booking.errors[:name].present?} form-control", required: true, autofocus: auto_focus(booking, form_field: :name) %>
          <div class="invalid-feedback">
            <%= "Please enter your name" %>
          </div>
          <% if @booking.errors[:name].present? %>
            <div class="invalid-feedback" style="display: block;">
              Please enter a valid name
            </div>
          <% end %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :email %>
          <%= form.text_field :email, class: "#{'is-invalid' if @booking.errors[:email].present?} form-control", required: true, autofocus: auto_focus(booking, form_field: :email) %>
          <div class="invalid-feedback">
            <%= "Please enter a valid email" %>
          </div>
          <% if @booking.errors[:email].present? %>
            <div class="invalid-feedback" style="display: block;">
              Please enter a valid email
            </div>
          <% end %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form.label :phone_number %>
          <%= form.text_field :phone_number, class: "#{'is-invalid' if @booking.errors[:phone_number].present?} form-control", required: true, autofocus: auto_focus(booking, form_field: :phone_number, default_auto_focus: true) %>
          <div class="invalid-feedback">
            <%= "Please enter your phone number" %>
          </div>
          <% if @booking.errors[:phone_number].present? %>
            <div class="invalid-feedback" style="display: block;">
              Please enter a valid phone number
            </div>
          <% end %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form.label :date_of_birth %>
          <%= form.date_field :date_of_birth, class: "#{'is-invalid' if @booking.errors[:date_of_birth].present?} form-control", required: true, autofocus: auto_focus(booking, form_field: :date_of_birth) %>
          <div class="invalid-feedback">
            <%= "Please enter your date my birth" %>
          </div>
          <% if @booking.errors[:date_of_birth].present? %>
            <div class="invalid-feedback" style="display: block;">
              Please enter a valid date of birth
            </div>
          <% end %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form.label :country %>
          <%= form.country_select :country, { priority_countries: ["AD", "AT", "BE", "BG", "HR", "CZ", "DK", "EE", "FR", "FI", "DE", "GI", "GR", "HU", "IS", "IE", "IT", "LV", "LU", "ME", "NL", "NO", "PL", "PT", "RO", "RS", "SK", "SI", "ES", "SE", "CH", "GB"]}, { class: "form-control customselect" }, required: true, autofocus: auto_focus(booking, form_field: :country)  %>
        </div>
      </div>
      <hr class="mb-5 mb-4">
    </li>
    <li>
      <h4 class="font-weight-bold">In Case of Emergency (ICE)</h4>
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :next_of_kin_name, "Name" %>
          <%= form.text_field :next_of_kin_name, class: "#{'is-invalid' if @booking.errors[:next_of_kin_name].present?} form-control", required: true, autofocus: auto_focus(booking, form_field: :next_of_kin_name) %>
          <div class="invalid-feedback">
            Please enter the name of your emergency contact
          </div>
          <% if @booking.errors[:next_of_kin_name].present? %>
            <div class="invalid-feedback" style="display: block;">
              Please enter the name of your emergency contact
            </div>
          <% end %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :next_of_kin_phone_number, "Phone number" %>
          <%= form.text_field :next_of_kin_phone_number, class: "#{'is-invalid' if @booking.errors[:next_of_kin_phone_number].present?} form-control", required: true, autofocus: auto_focus(booking, form_field: :next_of_kin_phone_number) %>
          <div class="invalid-feedback">
            Please enter a valid phone number of your emergency contact
          </div>
          <% if @booking.errors[:next_of_kin_phone_number].present? %>
            <div class="invalid-feedback" style="display: block;">
              Please enter a valid phone number of your emergency contact
            </div>
          <% end %>
        </div>
      </div>
      <hr class="mb-5">
    </li>
    <li>
      <h4 class="mb-4 font-weight-bold">Dietary and Health Requirements (optional)</h4>
      <div class="custom-multiselect mb-4">
        <div class="selectbox">
           <select class="form-control customselect">
              <option>Select any dietary requirements and allergies</option>
           </select>
           <div class="selectwrapper"></div>
        </div>
        <div id="selectoptions">
          <div class="row selectoptionblock">
            <div class="col-12"><h4 class="font-weight-bold">Dietary requirements</h4></div>
            <div class="col-12 col-md-4">
              <label class="radiocontainer">
                <%= form.radio_button(:dietary_requirements, :none, checked: true) %>
                None
                <span class="customradio"></span>
              </label>
            </div>
            <div class="col-12 col-md-4">
              <label class="radiocontainer">
              <%= form.radio_button(:dietary_requirements, :vegetarian) %>
                Vegetarian
                <span class="customradio"></span>
              </label>
            </div>
            <div class="col-12 col-md-4">
              <label class="radiocontainer">
              <%= form.radio_button(:dietary_requirements, :vegan) %>
                Vegan
                <span class="customradio"></span>
              </label>
            </div>
            <div class="col-12 col-md-6">
              <label class="radiocontainer">
              <%= form.radio_button(:dietary_requirements, :other) %>
                Other <i>(please add note below)</i>
                <span class="customradio"></span>
              </label>
            </div>
          </div>
          <div class="row selectoptionblock">
            <div class="col-12">
              <h4 class="font-weight-bold">Food Allergies</h4>
            </div>
            <% Allergy::POSSIBLE_FOOD_ALLERGIES.each do |allergy| %>
              <div class="col-12 col-md-4">
                <label class="checkcontainer">
                  <%= allergy.capitalize %> <%= "<i>(please add note below) </i>".html_safe if allergy == "other" %>
                  <%= check_box_tag("booking[allergies][]", allergy.to_sym) %>
                  <span class="customcheck"></span>
                </label>
              </div>
            <% end %>
            <div class="col-12 mt-4">
              <h4 class="font-weight-bold">Medical Allergies</h4>
            </div>
            <% Allergy::POSSIBLE_MEDICAL_ALLERGIES.each do |allergy| %>
              <div class="col-12 col-md-4">
                <label class="checkcontainer">
                  <%= allergy.capitalize %> <%= "<i>(please add note below) </i>".html_safe if allergy == "other" %>
                  <%= check_box_tag("booking[allergies][]", allergy.to_sym) %>
                  <span class="customcheck"></span>
                </label>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 mb-3">
          <%= form.label(:other_information, "Medical/Other information") %>
          <%= form.text_area(:other_information, class: "form-control") %>
        </div>
      </div>
      <!-- Other information? .. .where will they enter other/multiple dietary / allergies ?-->
    </li>
  </ul>
  <%= form.submit "Complete Booking", class: "btn btn-primary btn-lg btn-block mt-4" %>
<% end %>
