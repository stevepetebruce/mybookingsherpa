<div class="container">
  <div class="row">
    <div class="col-md-3 order-md-1">
      <div class="pt-4 text-center">
        <img class="d-block mx-auto mb-5" src="<%= asset_pack_path 'images/logos/alp-adventures-logo.png' %>" alt="logo" width="180" height="120">
      </div>
    </div>
    <div class="py-5 col-md-8 order-md-2">
      <h1 class="font-weight-bold"><%= @booking.trip_name %></h1>
      <h3 class="card-title"><%= "#{@booking.start_date.day} - #{@booking.end_date.day} #{Date::MONTHNAMES[@booking.end_date.month]}" %></h3>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-1 col-md-10">
      <h3 class="font-weight-bold">Hi Alan<%= @booking.first_name %>, your payment was successful.</h3>
      <h4 class="mb-5">Your booking is almost complete. <br>Please fill in your details below, to make sure your trip runs smoothly.</h4>
      <%= render "edit_form", booking: @booking, url: public_booking_path(@booking) %>
    </div>
  </div>
  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1"><a href="">Terms and Conditions</a></p>
  </footer>
</div>