<div class="container">
  <div class="row">
    <div class="col-md-4 order-md-1 mb-4">
      <div class="py-4 text-center">
        <!-- TODO: replace this with an uploaded organisation icon -->
        <img class="d-block mx-auto mb-4" src="<%= asset_pack_path 'images/logos/alp-adventures-logo.png' %>" alt="" width="60%">
        <h1 class="font-weight-bold"><%= @booking.trip_name %></h1>
        <h3 class="mt-0">
          <%= "#{@booking.start_date.day} - #{@booking.end_date.day} #{Date::MONTHNAMES[@booking.end_date.month]}" %>
          </h3>
        <p>
          <i><%= @booking.trip_description %></i>
        </p>
        <h2>Total: <%= "#{Currency.iso_to_symbol(@booking.currency)} #{number_with_precision(@booking.full_cost, precision: 0)}" %></h2>
      </div>
      <hr class="mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span>Places left for this trip</span>
        <span class="badge badge-secondary badge-pill">
          <!-- TODO: need to show a warning when there's no spaces left on the trip -->
          <%= @booking.trip_maximum_number_of_guests - @booking.trip_guest_count %>
        </span>
      </h4>
    </div>
    <div class="py-5 offset-md-1 col-md-7 order-md-2">
      <h4 class="mb-3 font-weight-bold">Your Details</h4>
      <% # TODO: this will post to Stripe API - remove this form when it does %>
      <%= render 'new_form', booking: @booking, url: public_trip_bookings_path(@trip) %>
    </div>
  </div>
</div>

