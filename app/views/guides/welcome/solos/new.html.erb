<div class="container-fluid page-body-wrapper content">
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-12">
          <div class="card card-shadow mt-5">
            <div class="card-body">
              <h1 class="card-title font-weight-bold mb-4">Welcome Solo...</h1>
              <%= form_with(url: guides_welcome_solos_path, local: true, class: "-needs-validation", html: { class: "new-guide-account-form", novalidate: :novalidate }) do |form| %>
                <%= form.hidden_field :token_account %>
                <fieldset>
                  <legend>Business Address</legend>
                  <%= label_tag :address_line1 %>
                  <%= text_field_tag :address_line1, "21 Palmeira Square" %>
                  <br/>
                  <%= label_tag :address_line2 %>
                  <%= text_field_tag :address_line2, "Flat 4" %>
                  <br/>
                  <%= label_tag :address_city %>
                  <%= text_field_tag :address_city, "Hove" %>
                  <br/>
                  <%= label_tag :address_state %>
                  <%= text_field_tag :address_state, "East Sussex" %>
                  <br/>
                  <%= label_tag :address_postal_code %>
                  <%= text_field_tag :address_postal_code, "BN3 2JN" %>
                  <br/>
                  <%= label_tag :address_country_code %>
                  <%= text_field_tag :address_country_code, "GB" %>
                  <br/>
                  <%= label_tag :phone %>
                  <%= text_field_tag :phone, "004407989474546" %>
                  <br/>
                  <br/>
                </fieldset>

                <fieldset>
                  <legend>Your details</legend>
                  <%= label_tag :dob_day %>
                  <%= text_field_tag :dob_day, "12" %>
                  <br/>
                  <%= label_tag :dob_month %>
                  <%= text_field_tag :dob_month, "12" %>
                  <br/>
                  <%= label_tag :dob_year %>
                  <%= text_field_tag :dob_year, "1987" %>
                  <br/>
                  <%= label_tag :email %>
                  <%= text_field_tag :email, current_guide.email %>
                  <br/>
                  <%= label_tag :first_name %>
                  <%= text_field_tag :first_name, "Alan" %>
                  <br/>
                  <%= label_tag :last_name %>
                  <%= text_field_tag :last_name, "Donohoe" %>
                  <br/>
                  <%= label_tag :maiden_name %>
                  <%= text_field_tag :maiden_name %>
                  <br/>
                  <%= label_tag :gender %>
                  <%= text_field_tag :gender, "male" %>
                  <br/>
                </fieldset>
                <p>
                  <!-- TODO: can change this to be in French... https://stripe.com/fr/connect-account/legal#translation -->
                  I agree to <a href="#">our terms</a> and the <a href="https://stripe.com/gb/connect-account/legal">Stripe Connected Account Agreement</a>
                  <%= form.check_box :accepted_tos, required: true %>
                </p>
                <%= submit_tag :submit %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>