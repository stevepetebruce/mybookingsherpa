<div class="container-fluid page-body-wrapper content">
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-12">
          <div class="card card-shadow mt-5">
            <div class="card-body">
              <h1 class="card-title font-weight-bold mb-4">Welcome Solo...</h1>
              <%= form_with(url: guides_welcome_solos_path, local: true, class: "-needs-validation", html: { class: "new-guide-account-form", novalidate: :novalidate }, data: { controller: "stripe-individual-account", target: "stripe-individual-account.form", stripe_individual_account_key: @current_organisation.stripe_publishable_key }) do |form| %>
                <%= form.hidden_field :token_account, data: { target: "stripe-individual-account.tokenAccount" } %>
                <fieldset>
                  <legend>Business Address</legend>
                  <%= label_tag :address_line1 %>
                  <%= text_field_tag :address_line1, "21 Palmeira Square", data: { target: "stripe-individual-account.addressLine1" } %>
                  <br/>
                  <%= label_tag :address_line2 %>
                  <%= text_field_tag :address_line2, "Flat 4", data: { target: "stripe-individual-account.addressLine2" }  %>
                  <br/>
                  <%= label_tag :address_city %>
                  <%= text_field_tag :address_city, "Hove", data: { target: "stripe-individual-account.addressCity" }  %>
                  <br/>
                  <%= label_tag :address_state %>
                  <%= text_field_tag :address_state, "East Sussex", data: { target: "stripe-individual-account.addressState" }  %>
                  <br/>
                  <%= label_tag :address_postal_code %>
                  <%= text_field_tag :address_postal_code, "BN3 2JN", data: { target: "stripe-individual-account.addressPostalCode" }  %>
                  <br/>
                  <%= label_tag :address_country_code %>
                  <%= text_field_tag :address_country_code, "GB", data: { target: "stripe-individual-account.addressCountryCode" }  %>
                  <br/>
                  <%= label_tag :phone %>
                  <%= text_field_tag :phone, "004407989474546", data: { target: "stripe-individual-account.phone" }  %>
                  <br/>
                  <br/>
                </fieldset>

                <fieldset>
                  <legend>Your details</legend>
                  <%= label_tag :dob_day %>
                  <%= text_field_tag :dob_day, "12", data: { target: "stripe-individual-account.dobDay" }  %>
                  <br/>
                  <%= label_tag :dob_month %>
                  <%= text_field_tag :dob_month, "12", data: { target: "stripe-individual-account.dobMonth" }  %>
                  <br/>
                  <%= label_tag :dob_year %>
                  <%= text_field_tag :dob_year, "1987", data: { target: "stripe-individual-account.dobYear" }  %>
                  <br/>
                  <%= label_tag :email %>
                  <%= text_field_tag :email, current_guide.email, data: { target: "stripe-individual-account.email" }  %>
                  <br/>
                  <%= label_tag :first_name %>
                  <%= text_field_tag :first_name, "Alan", data: { target: "stripe-individual-account.firstName" }  %>
                  <br/>
                  <%= label_tag :last_name %>
                  <%= text_field_tag :last_name, "Donohoe", data: { target: "stripe-individual-account.lastName" }  %>
                  <br/>
                  <%= label_tag :maiden_name %>
                  <%= text_field_tag :maiden_name, "", data: { target: "stripe-individual-account.maidenName" }  %>
                  <br/>
                  <%= label_tag :gender %>
                  <%= text_field_tag :gender, "male", data: { target: "stripe-individual-account.gender" }  %>
                  <br/>
                </fieldset>
                <p>
                  <!-- TODO: can change this to be in French... https://stripe.com/fr/connect-account/legal#translation -->
                  I agree to <a href="#">our terms</a> and the <a href="https://stripe.com/gb/connect-account/legal">Stripe Connected Account Agreement</a>
                  <%= form.check_box :accepted_tos, required: true, data: { target: "stripe-individual-account.acceptedTos" }  %>
                </p>
                <%= submit_tag :submit %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>