<div class="container-fluid page-body-wrapper content">
  <div class="main-panel">
    <div class="content-wrapper table-responsive mt-5">   
      <h1 class="font-weight-bold"><%= @trip.name %>:  
        <span class="text-gray ml-2"><%= "#{@trip.start_date.day} - #{@trip.end_date.day} #{Date::MONTHNAMES[@trip.end_date.month]}" %></span>
      </h1>
      <button type="button" class="btn btn-primary btn-sm mb-3" data-csvButton="csvButton">Download Spreadsheet</button>
      <table class="table table-striped table-bordered bg-white" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th class="th-sm">Name 
            </th>
            <th class="th-sm">Paid
            </th>
            <th class="th-sm">Country
            </th>
            <th class="th-sm">Phone number
            </th>
            <th class="th-sm">Email
            </th>
            <th class="th-sm">Booked
            </th>
            <th class="th-sm">Age
            </th>
            <th class="th-sm">Emergency Contact
            </th>
            <th class="th-sm">Allergies
            </th>
            <th class="th-sm">Dietry Requirements
            </th>
            <th class="th-sm">Other Information
            </th>
          </tr>
        </thead>
        <tbody>
          <% @trip.decorated_bookings.each do |booking| %>
            <tr>
              <td nowrap>
                <strong><%= booking.name %></strong>
              </td>
              <td>
                <% if Bookings::Status.new(booking).payment_required? %>
                  <span class='dot dot-sm dot-danger'></span> Payment required
                <% else %>
                  <span class='dot dot-sm dot-success'></span> Paid in full
                <% end %>
              </td>
              <td>
                <% if booking.country %>                           
                  <%= booking.country %>
                <% else %>
                  No Country
                <% end %>
              </td>
              <td>
                <% if booking.phone_number %>
                  <a href="tel:+<%= booking.phone_number %>" class="text-primary"><%= booking.phone_number %></a>
                <% else %>
                  No phone number.
                <% end %>
              </td>
              <td>
                <a href="mailto:<%= booking.email %>" class="text-primary"><%= booking.email %></a>
              </td>
              <td>
                <%= booking.created_at.strftime("%d %b %Y") %>
              </td>
              <td>
                <% if booking.date_of_birth.present? %>
                  <%= Time.zone.now.year - booking.date_of_birth.year %>
                <% else %>
                  Unknown
                <% end %>
              </td>
              <td>
                <% if booking.next_of_kin_name %>
                  <%= booking.next_of_kin_name %>: <a href="tel:+<%= booking.next_of_kin_phone_number %>" class="text-primary"><%= booking.next_of_kin_phone_number %></a>
                <% else %>
                  No emergency contact details.
                <% end %>
              </td>
                <% if Bookings::Status.new(booking).allergies? %>
                  <td class="table-danger">
                    <%= booking.allergies.capitalize %>
                  </td>
                <% else %>
                  <td>
                    No allergies.
                  </td>
                <% end %>
              </td>
                <% if Bookings::Status.new(booking).dietary_requirements? %>
                  <td class="table-warning">
                    <%= booking.dietary_requirements.capitalize %>
                  </td>
                <% else %>
                  <td>
                    No dietary requirements.
                  </td>
                <% end %>
              </td>
              <td>
                <% if Bookings::Status.new(booking).other_information? %>
                  <%= booking.other_information %>
                <% else %>
                  No other information.
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
