<div class="container-fluid page-body-wrapper content">
	<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-12 grid-margin">
          <div class="card card-shadow">
            <div class="card-body">
              <div class="row mb-4 justify-content-md-center">
                <div class="col-10">
                  <h1 class="card-title font-weight-bold">
                    Add Trip
                  </h1>
                  <label for="tripname">Trip Name</label>
                  <input type="text" class="form-control" name="tripname" required>
                  <div class="row mt-3">
                    <div class="col-md-6">
                      <label for="startdate">Start date</label>
                      <input type="date" class="form-control" name="startdate" required>
                    </div>
                    <div class="col-md-6">
                      <label for="enddate">End date</label>
                      <input type="date" class="form-control" name="enddate" required>
                    </div>
                  </div>
                  <div class="mt-3 pb-1">
                    <label for="description">Description</label>
                    <textarea class="form-control" rows="4" name="description" required></textarea>
                  </div>
                  <h2 class="card-title font-weight-bold mt-5">
                    Guests
                  </h2>
                  <div class="row mt-3">
                    <div class="form-group row col-md-5">
                      <label for="minimum" class="col-auto col-form-label">Minimum People</label>
                      <div class="col-auto">
                        <input type="number" min="0" value="0" class="form-control" id="minimum">
                      </div>
                    </div>
                    <div class="form-group row col-md-5">
                      <label for="minimum" class="col-auto col-form-label">Maximum People</label>
                      <div class="col-auto">
                        <input type="number" min="0" value="10" class="form-control" id="maximum">
                      </div>
                    </div>
                  </div>
                  <h2 class="card-title font-weight-bold mt-5">
                    Price
                  </h2>
                  <div class="row mt-3">
                    <div class="form-group row col-md-5">
                      <label for="currency" class="col-auto col-form-label">Currency</label>
                      <div class="col-auto">
                        <select class="form-control customSelect mr-sm-2 pr-4" name="currency">
                          <option value="euros">Euros</option>
                          <option value="pounds">Pounds</option>
                          <option value="dollars">Dollars</option>
                        </select>
                      </div>
                    </div>
                    <div class="form-group row col-md-7">
                      <label for="minimum" class="col-auto col-form-label">Cost per person</label>
                      <div class="col-auto">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">â‚¬</span>
                          </div>
                          <input type="number" value="900" min="0" step="1.0" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control"/>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row mt-5 mb-5">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Add Trip</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>