<div class="container-fluid page-body-wrapper content">
<!-- main -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-12">
        <div class="card card-shadow mt-5">
          <div class="card-body">
            <h1 class="card-title font-weight-bold mb-4">
              <%= @show_past_trips ? "My Past Trips" : "My Trips" %>
              <span class="small">
                <a class="ml-1" href="/guides/trips/new" alt="Add a trip" data-toggle="tooltip" data-placement="top" data-tooltip="Add a trip" data-tooltip-position="top">
                  <i class="fa fa-plus-circle text-primary"></i>
                </a>
              </span>
            </h1>
            <div class="row">
              <div class="col col-lg-7"></div>
              <div class="col col-lg-4 d-sm-none d-md-none d-lg-block d-none">
                <h4>Places Filled</h4>
              </div>
              <div class="col col-lg-1"></div>
            </div>
            <div class="accordion" id="accordion">
              <% @trips.each do |trip| %>
                <div class="card">
                  <div class="card-header pointer collapsed" id="<%= "trip-#{trip.id}-header" %>" data-toggle="collapse" data-target="<%= "#trip-#{trip.id}-card" %>" aria-expanded="false"
                    aria-controls="collapseOne">
                    <div class="row">
                      <div class="row col-10 col-sm-7 h4 font-weight-bold no-gutters">
                        <div class="col col-md-8 col-sm-12">
                          <!-- Add class for cancelled trips -->
                          <!--  <span class="cancelled-trip"><%= trip.name %></span> -->
                          <%= trip.name %>
                        </div>
                        <div class="col-md-4 col-sm-12 text-gray h4 font-weight-normal mb-0">
                          <%= "#{trip.start_date.day} - #{trip.end_date.day} #{Date::MONTHNAMES[trip.end_date.month]}" %>
                        </div>
                      </div>
                      
                      <div class="col col-lg-4 d-sm-none d-md-block d-none d-sm-block">
                        <div>
                          <% (0..trip.maximum_number_of_guests - 1).each do |i| %>
                            <% if trip.bookings[i] %>
                              <span class="dot dot-sm <%= trip.bookings[i].payment_status_icon %>" data-toggle="tooltip" data-placement="top" data-tooltip="<%= trip.bookings[i].name %>" data-tooltip-position="top"></span>
                            <% else %>
                              <span class='dot dot-sm dot-grey' data-tooltip="Place not filled" data-tooltip-position="top"></span>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                      <div class="col col-lg-1 text-right">
                        <i class="fa fa-chevron-circle-down md-20"></i>
                      </div>
                    </div>
                  </div>
                  <div id="<%= "trip-#{trip.id}-card" %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                      <div class="fluid-container">
                         <div class="row border-bottom pb-3" >
                          <div class="col-12 col-md-8 mt-1 text-nowrap d-flex justify-content-start"> 
                            <h5 class="d-none d-sm-none d-md-none d-lg-block mb-0 mt-1 mr-2 text-muted">New Booking Link</h5>
                            <div class="input-group-append mt-0">    
                              <div class="outer-text-wrapper">
                                <small class="clipboard-input" data-clipboard-source="<%= trip.id %>"><%= trip.new_public_booking_link %></small>
                              </div>
                              <button class="btn btn-sm btn-outline-secondary px-2" data-toggle="tooltip" data-placement="top" data-tooltip="Copy new booking link to clipboard" data-tooltip-position="top" data-clipboard-btn="<%= trip.id %>"><i class="fa fa-copy" data-clipboard-btn="<%= trip.id %>"></i></button>
                              <a href="<%= trip.new_public_booking_link %>" target="_blank" class="btn btn-sm btn-outline-secondary px-2" data-toggle="tooltip" data-placement="top" data-tooltip="Open new booking link" data-tooltip-position="top"><i class="fa fa-external-link"></i></a>
                              <span data-clipboard-message="<%= trip.id %>" class="small ml-2 message">Copied</span>
                            </div>
                          </div>
                          <div class="col-12 col-md-4">
                            <%= link_to "Trip Overview", guides_trip_bookings_path(trip), class: "btn btn-sm btn-outline-secondary edit-trip-link mt-1" %>
                            <%= link_to edit_guides_trip_path(trip), class: "btn btn-sm btn-outline-secondary edit-trip-link mt-1", data: { edit_link: trip.id } do %>
                              Edit Trip
                            <% end %>
                          </div>
                        </div>
                        <!-- Loop throuh individual in trip -->
                        <% trip.bookings.each do |booking| %>
                          <%= link_to guides_booking_path(booking) do %>
                            <div class="row ticket-card pt-3 pb-2 border-bottom">
                              <div class="d-sm-none d-md-block d-none position-relative">
                                <%= image_tag booking.gravatar_url, class: "avatar avatar-sm", alt: "guest profile image" %>
                                <% if booking.flag_icon.present? %>
                                  <span class="flag-icon flag-icon-circled flag-icon-profile <%= booking.flag_icon %>"></span>
                                <% end %>
                              </div>
                              <div class="col-12 col-lg-6 col-md-6 col-sm-12">
                                <div class="d-flex">
                                  <p class="text-primary mb-0 mt-1 no-wrap h3 font-weight-light">
                                    <%= booking.guest_or_booking_name %>
                                  </p>
                                  <% if Bookings::Status.new(booking).personal_details_incomplete? %>
                                    <small class="mt-2 ml-1">(personal details incomplete)</small>
                                  <% end %>
                                </div>
                              </div>
                              <div class="col-9 col-lg-4 col-md-3 col-sm-10">
                                  <span class="dot dot-sm dot-paid <%= booking.payment_status_icon %>"></span> <%= booking.payment_status_text %>
                              </div>
                              <div class="col-xs-auto mb-1">
                                <% if booking.guest_or_booking_allergies? %>
                                  <span data-toggle="tooltip" data-placement="top" data-tooltip="Allergies: <%= booking.human_readable_allergies %>" data-tooltip-position="top">
                                    <img src="<%= asset_pack_path 'media/images/icons/medical-red.svg' %>" class="custom-icon"/>
                                  </span>
                                <% end %>
                                <% if booking.guest_or_booking_dietary_requirements? %>
                                  <span data-toggle="tooltip" data-placement="top" data-tooltip="Diet: <%= booking.human_readable_dietary_requirements %>" data-tooltip-position="top"><img src="<%= asset_pack_path 'media/images/icons/diet-yellow.svg' %>" class="custom-icon" /></span>
                                <% end %>
                                <% if booking.guest_or_booking_other_information %>
                                  <span data-toggle="tooltip" data-placement="top" data-tooltip="Additional information" data-tooltip-position="top"><img src="<%= asset_pack_path 'media/images/icons/info-yellow.svg' %>" class="custom-icon" /></span>
                                <% end %>
                              </div>
                            </div>
                          <% end %>
                        <% end %>
                        <!-- END Loop throuh individual in trip -->
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <% # TODO: Pete could have a look at this. Not sure if it's in keeping with our style. %>
          <div class="col-md-12 pb-4 text-center">
            <% if @show_past_trips %>
              <%= link_to "My Trips", guides_trips_path, class: "btn btn-primary" %>
            <% else %>
              <%= link_to "My Past Trips", guides_trips_path(past_trips: true), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>