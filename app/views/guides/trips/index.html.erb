                                    <div class="col ">
                                      <a href="#" class="badge badge-warning d-none d-sm-none d-md-inline align-middle"><i class="fa fa-exclamation-circle"></i><%= guest.status_text(trip) %></a>
                                    </div>
                                  <% end %>
                                </p>
                              </div>
                            </div>
                          </div>
