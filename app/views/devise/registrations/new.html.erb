<div class="container-fluid full-height">
  <div class="row row-height">
    <div class="col-lg-4 content-left">
      <div class="onboard-left-wrapper bg_img bg1">
        <div class="onboard-logo"><img src="<%= asset_pack_path 'media/images/onboarding/logo-lt.svg' %>" alt="Logo"></div>
        <div class="wrapper">
          <div class="py-4 text-center">
            <!-- <p class="quotation-mark">
              â€œ
            </p>
            <h3 class="quote-text">
            </h3>
            <div class="blog-post-actions">
              <p class="blog-post-bottom">
              </p>
            </div>
            -->
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-7 content-right">
      <div class="row">
        <div class="col-md-12 mb-5 mt-3">
          <div class="progress">
            <div class="one no-color"></div>
            <div class="two no-color"></div>
            <div class="three no-color"></div>
            <div class="four no-color"></div>
            <div class="progress-bar" style="width: 0%;"></div>
          </div>
        </div>
        <div class="row ow-eq-height flex-fill">
          <div class="col-sm-12 col-md-12 col-lg-4">
            <h2 class="mt-3">Welcome...</h2>
            <h2 class="mt-3">Your first step to simplifying your group bookings</h2>
          </div>
          <div class="p-2 col-sm-12 col-md-12 col-lg-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
              <div class="col-md-12 mb-3">
                <%= f.label :email_address %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
                <div class="invalid-feedback">
                  Please enter a vali Email Address
                </div>
              </div>
              <div class="col-md-12 mb-3">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <span class="small"><i>(<%= @minimum_password_length %> characters minimum)</i></span>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "form-control" %>
                <div class="invalid-feedback">
                  Please enter your password
                </div>
              </div>
              <div class="col-md-12 mb-3">
            <!--     <a href="onboard.html"><input type="submit" name="commit" value="Next Step" class="btn btn-primary btn-lg btn-block mt-4 mb-4"></a> -->
                <%= f.submit "Next Step", class: "btn btn-primary btn-lg btn-block mt-4 mb-4" %>
              </div>
              <div class="col-md-12 mb-3 text-center">
                <%= link_to "Already signed up? Log in here", new_session_path(resource_name), class: "small" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
