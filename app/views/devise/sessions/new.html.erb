<div class="container">
  <div class="row justify-content-center vh-100">
    <div class="bg-white rounded shadow p-4 px-lg-5 col-md-6 my-auto">
      <h2 class="font-weight-bold mb-4 text-center">Sign in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-md-12 mb-3">
          <%= f.label :email, class: "form-control-label text-uppercase" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="col-md-12 mb-3">
          <%= f.label :password, class: "form-control-label text-uppercase" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="col-12 mb-3 text-center">
          <%= f.submit "Sign in", class: "btn btn-primary btn-lg rounded uppercase mt-4 mb-4" %>
        </div>
        <div class="col-md-12 mb-3 text-center">
          Haven't signed up yet? <%= link_to "Sign up here", new_registration_path(resource_name), class: "text-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
